<Window x:Class="Authorization.FormMessageErr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Authorization"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Registred" FontWeight="Light"  Height="300" Width="370" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#ffdadada">

        <Border MinWidth="100" Margin="15" Background="White" Padding="30" VerticalAlignment="Center" MaxWidth="550" CornerRadius="20">

            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0" />
            </Border.Effect>
            <StackPanel>
                <Image Source="C:\Users\1\source\repos\Authorization\Authorization\img\err.png" Width="30" />
                <TextBlock Text="" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" Margin="10"  x:Name="ErrMessage" />
                <Button Style="{StaticResource MaterialDesignFlatButton}" Width="60" Height="25"  Content="OK"  Click="Button_Click" x:Name="ErrButton" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
